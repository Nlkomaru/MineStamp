{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "ignore": [
            ".next",
            "node_modules",
            "public",
            "styled-system",
            "src/components/ui"
        ],
        "lineWidth": 80
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "ignore": [
            ".docusaurus",
            "node_modules",
            "public",
            "src/components/ui",
            "src/hooks",
            "tailwind.config.js",
            "docusaurus.config.ts"
        ],
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "error"
            },
            "suspicious": {
                "noConsoleLog": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
